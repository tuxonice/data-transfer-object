{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "pin",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchManagers": ["composer"],
      "matchPackageNames": [
        "php"
      ],
      "enabled": false
    }
  ]
}
